{% extends 'knp_menu.html.twig' %}

{% import 'knp_menu.html.twig' as knp_menu %}

{% block list %}
    {% if item.hasChildren and options.depth is not same as(0) and item.displayChildren %}
        <nav{{ knp_menu.attributes(listAttributes) }} class="nav">
            {{ block('children') }}
        </nav>
    {% endif %}
{% endblock %}

{% block item %}
    {% if item.displayed %}
        {{ block('linkElement') }}
    {% endif %}
{% endblock %}

{% block linkElement %}<a class="nav-link {% if matcher.isCurrent(item) %}active{% endif %}" href="{{ item.uri }}"{{ knp_menu.attributes(item.linkAttributes) }}>{{ block('label') }}</a>{% endblock %}

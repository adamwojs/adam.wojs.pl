<article>
    {% set url = path('ez_urlalias', {
        'locationId': content.contentInfo.mainLocationId
    }) %}

    <header>
        <h2><a href="{{ url }}">{{ ez_content_name(content) }}</a></h2>

        <div class="blog-post-meta">
            Opublikowano
            <time datetime="{{ content.versionInfo.creationDate|date('c') }}">
                {{ content.versionInfo.creationDate|date('d-m-Y') }}
            </time>
        </div>
    </header>

    {{ ez_render_field(content, 'intro') }}
    {{ ez_render_field(content, 'image', { parameters: { alias: 'blog_post', width: 1024, height: 300 } }) }}

    <p class="text-right">
        <a href="{{ url }}">Czytaj dalej &raquo;</a>
    </p>
</article>

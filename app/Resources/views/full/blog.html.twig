{% extends '::pagelayout.html.twig' %}

{% block content %}
    <h1>{{ ez_content_name(content) }}</h1>

    {% for hit in posts %}
        {% set post = hit.valueObject %}

        {{ render(controller('ez_content:viewAction', {
            'locationId': post.contentInfo.mainLocationId,
            'viewType': 'line',
        })) }}
    {% endfor %}

    {% if posts.haveToPaginate() %}
        {{ pagerfanta(posts) }}
    {% endif %}
{% endblock %}
